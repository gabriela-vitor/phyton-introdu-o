'''
class restaurante:
    def __init__(self, nome, categoria, ativo = False):
        self.nome = nome
        self.categoria = categoria
        self.ativo = ativo
        
    def __str__(self):
        return f'{ self.nome} | {self.categoria}'
        
meu_restaurante = restaurante(nome = 'La Martina', categoria = 'Lanches')
